<div class="md:w-{{ size }} w-full md:px-2 mb-6">

    <div class="relative" data-te-input-wrapper-init>
        {{form_widget | raw}}
        <label for={{ field_id }} class="pointer-events-none absolute left-3 top-0 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6]transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary-600 peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none">{{ label }}</label>
    </div>
    <span class="absolute text-sm text-danger">{{form_errors | raw}}</span>
</div>