{% extends 'admin/base_admin.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}

    <h1 class="h3 mb-2 text-gray-800">Listes des restaurants</h1>
    
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="{{ path('app_admin_shop_new') }}">Cr√©er un nouveau restaurant</a>
        </div>
        <div class="col-12 my-3">
                {{ form_start(form) }}
                  <div class="form-group row gx-3 mb-3 justify-content-start">
                        <div class="col-md-3">
                          {{ form_row(form.name) }}
                        </div>
                        <div class="col d-flex pt-3 align-items-center">
                          <div>
                            <button type="submit" class="btn btn-primary">Rechercher</button>
                          </div>
                        </div>
                    </div>
                {{ form_end(form) }}
              </div>
        <div class="card-body">
            <div class="navigate mt-1 d-flex justify-content-center">
                {{ knp_pagination_render(shops) }}
                </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Website</th>
                            <th>Adresse</th>
                            <th>Tel.</th>
                            <th>Livraison</th>
                            <th>Emporter</th>
                            <th>Prix moyen</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for shop in shops %}
                        <tr>
                            <td>{{ shop.name }}</td>
                            <td>{{ shop.website }}</td>
                            <td>{{ shop.address }}</td>
                            <td>{{ shop.phone }}</td>
                            <td>{{ shop.delivery ? 'Oui' : 'Non' }}</td>
                            <td>{{ shop.takeAway ? 'Oui' : 'Non' }}</td>
                            <td>{{ shop.avgPrice }}</td>
                            <td class="align-middle">
                                <a class="text-secondary font-weight-bold text-xs my-2" href="{{ path('app_admin_shop_edit', {'id': shop.id}) }}">Editer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigate mt-1 d-flex justify-content-center">
                {{ knp_pagination_render(shops) }}
            </div>
        </div>
    </div>
{% endblock %}
