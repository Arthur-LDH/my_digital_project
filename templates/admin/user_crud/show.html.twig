{% extends 'admin/base_admin.html.twig' %}

{% block title %}{{ user.login }}{% endblock %}

{% block body %}
    <h1>Détails : {{ user.login }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>
                    {% if 'ROLE_ADMIN' in user.roles %}
                        Admin
                    {% else %}
                        Utilisateur
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Vérifié</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-2">
        <a class="btn btn-primary" href="{{ path('app_admin_user_index') }}">Retour à la liste</a>

        <a class="btn btn-secondary" href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Editer</a>
    </div>
    {{ include('admin/user_crud/_delete_form.html.twig') }}
  
{% endblock %}
