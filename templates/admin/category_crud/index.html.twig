{% extends 'admin/base_admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}

    <h1 class="h3 mb-2 text-gray-800">Listes des catégories</h1>
    
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="{{ path('app_admin_category_new') }}">Créer une nouvelle catégorie</a>
        </div>
        <div class="col-12 my-3">
            {{ form_start(form) }}
                <div class="form-group row gx-3 mb-3 justify-content-start">
                    <div class="col-md-3">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col d-flex justify-content-end align-items-center">
                        <div>
                        <button type="submit" class="btn btn-primary">Filtrer</button>
                        </div>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
        <div class="card-body">
            <div class="navigate mt-1 d-flex justify-content-center">
                {{ knp_pagination_render(categories) }}
                </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                        <tr>
                            <td>{{ category.name }}</td>
                            <td class="align-middle">
                                <a class="text-secondary font-weight-bold text-xs my-2" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Editer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="navigate mt-1 d-flex justify-content-center">
                {{ knp_pagination_render(categories) }}
            </div>
        </div>
    </div>
{% endblock %}
