{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        <div class="row gx-3 mb-3">
            {{ form_row(registrationForm.login)}}
        </div>
        <div class="row gx-3 mb-3">
            {{ form_row(registrationForm.email)}}
        </div>
        <div class="row gx-3 mb-3">
            {{ form_row(registrationForm.plainPassword)}}
        </div>
        <div class="row gx-3 mb-3">
            <!-- Form Group (location)-->
            <div class="col-md-12">
                <div class="input-group">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Adresse"
                                id="searchBarAutocomplete"
                                aria-label="Adresse" aria-describedby="btn-search-address">
                        <label for="searchBarAutocomplete">Adresse de livraison</label>
                    </div>
                    <button class="btn btn-outline-primary" type="button" id="btn-search-address">Valider
                    </button>
                </div>


                <div class="col-xs-12 col-9">
                    <div
                            {{ stimulus_controller('google-place', {
                                'page': "form",
                                'form': 'registration',
                            }) }}
                    >
                    </div>
                </div>
            </div>
        </div>
        <div class="row gx-3 mb-3">
            {{ form_row(registrationForm.agreeTerms)}}
        </div>
        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
